{
    "workbench.colorTheme": "Aura Dracula Spirit (Soft)",  //theme
    "workbench.activityBar.location": "hidden",  //plugin icons
    "workbench.editor.showTabs": "single",  //op tabs
    "workbench.statusBar.visible": false,  //bottom bar
    "workbench.startupEditor": "none",  //vscode clean start
    "workbench.tips.enabled": false,  //disables shortcuts tips
    "workbench.sideBar.location": "right",  //sidebar
    "workbench.iconTheme": "material-icon-theme",  //icons for files
    "workbench.tree.enableStickyScroll": true,  //parent folder during scroll
    "workbench.tree.renderIndentGuides": "none",  //indent lines
    "workbench.tree.indent":  8,  //indent level
    "workbench.colorCustomizations": {
        "editorCursor.background": "#000000",
        "editorOverviewRuler.wordHighlightStrongForeground": "#0000",
        "editorOverviewRuler.selectionHighlightForeground": "#0000",
        "editorOverviewRuler.rangeHighlightForeground": "#0000",
        "editorOverviewRuler.wordHighlightForeground": "#0000",
        "editorOverviewRuler.bracketMatchForeground": "#0000",
        "editorOverviewRuler.findMatchForeground": "#0000",
        "editorOverviewRuler.modifiedForeground": "#0000",
        "editorOverviewRuler.deletedForeground": "#0000",
        "editorOverviewRuler.warningForeground": "#0000",
        "editorOverviewRuler.addedForeground": "#0000",
        "editorOverviewRuler.errorForeground": "#0000",
        "editorOverviewRuler.infoForeground": "#0000",
        "editorOverviewRuler.border": "#0000",
        "[Aura Dracula Spirit (Soft)]": {
            "editorSuggestWidget.selectedBackground": "#3A334B",
            "sideBar.background": "#191521"
        }
    },

    "explorer.compactFolders": false,  //display empty subfolders
    "explorer.confirmDelete": false,  //confirm file deletion
    "explorer.confirmDragAndDrop": false,  //confirm file drag&drop
    "explorer.decorations.badges": false,  //file badges

    "extensions.ignoreRecommendations": true,  //extension recomendations

    "window.zoomLevel": 3,  //zoom
    "window.customTitleBarVisibility": "never",  //vscode inbuilt top bar
    "window.titleBarStyle": "native",  //vscode inbuilt top bar style


    "custom-ui-style.electron": {
        "titleBarStyle": "hiddenInset",  //app bar
        "trafficLightPosition": {
            "x": 20,
            "y": 16,
        }
    },  //app traffic light buttons position
    "custom-ui-style.stylesheet": {
        ".notification-toast": "box-shadow: none !important",  //noti container shadow
        ".quick-input-widget.show-file-icons": "box-shadow: none !important",  //comd box shadow
        ".quick-input-widget": "top 25vh !important",  //cmd box position
        ".quick-input-list .scrollbar": "display: none",  //cmd box scrollbar
        ".monaco-action-bar.quick-input-inline-action-bar": "display: none",  //trim cmd box
        ".editor-widget.find-widget": "box-shadow: none; border-radius: 4px",  //search box shadow & corners
        ".quick-input-titlebar": "background: #100B15 !important",  //vscode neovim extension bg
        ".monaco-workbench .part.editor > .content .editor-group-container > .title.title-border-bottom:after": "display: none",  //title bar border
        ".monaco-scrollable-element > .shadow.top": "display: none",  //file explorer title shadow
        ".sidebar .title-label": "padding: 0 !important",  //sidebar title position
        ".sidebar": "border: none !important",  //sidebar border
        ".monaco-workbench .monaco-list:not(.element-focused):focus:before": "outline: none !important",  //sidebar outline
        ".monaco-list-row.focused": "outline: none !important",  //sidebar file outlines
        ".monaco.editor .scroll-decoration": "display: none",  //title bar shadow
        ".title-actions": "display: none !important",  //title bar buttons
        ".title.show-file-icons .label-container .monaco-icon-label.file-icon": "justify-content: center",  //center title text
        ".title .monaco-icon-label:after": "margin-right: 0",  //removes error count
        ".monaco-workbench .part.editor > .content .editor-group-container > .title > .label-container > .title-label": "padding-left: 75px",  //file name & path position
        ".title .monaco-icon-label.file-icon": "margin: 0 60px",
        ".monaco-editor .cursors-layer .cursor": "background-image: linear-gradient(135deg, #ffaffc 10%, #DA70D6 100%)",  //cursor gradient
    },
    "custom-ui-style.font.sansSerif": "MesloLGS NF",  //font style
    "custom-ui-style.font.monospace": "MesloLGS NF",  //font style
    "custom-ui-style.reload": true,  //custom-ui reload

    "editor.fontFamily": "MesloLGS NF",  //font family
    "editor.fontSize": 14,  //font size
    "editor.lineHeight": 1.7,
    "editor.minimap.enabled": false,  //hides minimap
    "editor.multiCursorModifier": "ctrlCmd",  //switch option to cmd to select multi code lines
    "editor.cursorBlinking": "blink",  //cursor blink
    "editor.cursorStyle": "line",  //cursor style
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "comment",
                "settings": {
                    "fontStyle": "italic",
                }
            }
        ]
    },  // bold comments
    "editor.stickyScroll.enabled": false,  //fixed code
    "editor.codeLens": false,  //codelens suggestions
    "editor.links": true,  //urls underline
    "editor.matchBrackets": "never", //show ending bracket
    "editor.lightbulb.enabled": "off",  //lightbulb suggestions
    "editor.hover.enabled": "off",  //show info on hover
    "editor.lineNumbers": "off",  //code line number
    "editor.tabSize": 2,  //tab step
    "editor.detectIndentation": true,  //auto detect indent step
    "editor.showFoldingControls": "mouseover",  //button to hide code
    "editor.guides.indentation": false ,  //indent guidelines
    "editor.renderWhitespace": "none",  //special chars
    "editor.renderLineHighlight": "none",  //highlught active line
    "editor.occurrencesHighlight": "off",  //active word highlight
    "editor.selectionHighlight": false,  //word selection highlight
    "editor.scrollbar.horizontal": "hidden",  //horizontal scrollbar
    "editor.scrollbar.vertical": "hidden",  //vertical scrollbar
    "editor.overviewRulerBorder": false,  //side line
    "editor.hideCursorInOverviewRuler": true,  //side cursor
    "editor.quickSuggestions": {
        "other": "off",
        "comments": "off",
        "strings": "off"
    },  //quick suggestions
    "editor.suggestOnTriggerCharacters": false,  //suggest after special chars "."
    "editor.tabCompletion": "on",  //tab auto completion
    "editor.snippetSuggestions": "top",  //snippet suggestions

    "emmet.triggerExpansionOnTab": true,  //trigger autocompletions

    "update.mode": "default",  //extension update mode

    "files.trimTrailingWhitespace": true,  //trim whitespaces
    "files.insertFinalNewline": true,  //insert final empty line
    "files.autoSave": "afterDelay",  //auto save

    "scm.diffDecorations": "gutter",  //git diff decorators

    "git.decorations.enabled": false,  //git changes file color

    "breadcrumbs.enabled": false,  //cleaner title file path
}
